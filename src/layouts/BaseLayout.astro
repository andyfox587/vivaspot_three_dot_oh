---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedDate?: Date;
  modifiedDate?: Date;
  author?: string;
  canonicalUrl?: string;
  noIndex?: boolean;
}

const {
  title,
  description = 'Guest WiFi Marketing & Automation - VivaSpot captures guest emails and mobile numbers, stores them in your CRM, and triggers automated marketing campaigns.',
  image = '/images/wp-content/uploads/2023/09/vivaspot-logo-website-120x95-1.png',
  type = 'website',
  publishedDate,
  modifiedDate,
  author = 'VivaSpot',
  canonicalUrl,
  noIndex = false
} = Astro.props;

const canonicalURL = canonicalUrl ? new URL(canonicalUrl) : new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);

// JSON-LD structured data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "VivaSpot",
  "url": "https://vivaspot.com",
  "logo": "https://vivaspot.com/images/wp-content/uploads/2023/09/vivaspot-logo-website-120x95-1.png",
  "description": "Guest WiFi Marketing & Automation Platform",
  "sameAs": [
    "https://www.facebook.com/vivaspot",
    "https://twitter.com/vivaspot",
    "https://www.linkedin.com/company/vivaspot"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1-555-VIVASPOT",
    "contactType": "sales",
    "email": "info@vivaspot.com"
  }
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "VivaSpot",
  "url": "https://vivaspot.com",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://vivaspot.com/blog?search={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

const articleSchema = type === 'article' && publishedDate ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": imageURL.href,
  "author": {
    "@type": "Organization",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "VivaSpot",
    "logo": {
      "@type": "ImageObject",
      "url": "https://vivaspot.com/images/wp-content/uploads/2023/09/vivaspot-logo-website-120x95-1.png"
    }
  },
  "datePublished": publishedDate.toISOString(),
  "dateModified": (modifiedDate || publishedDate).toISOString(),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL.href
  }
} : null;

// SoftwareApplication schema for the product
const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "VivaSpot",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web-based",
  "description": "Guest WiFi marketing platform that captures guest emails and mobile numbers, stores them in your CRM, and triggers automated marketing campaigns.",
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "USD",
    "lowPrice": "0",
    "highPrice": "299",
    "offerCount": "5"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "127",
    "bestRating": "5",
    "worstRating": "1"
  },
  "featureList": [
    "Guest WiFi splash page customization",
    "Email and SMS capture",
    "CRM integration",
    "Automated marketing campaigns",
    "Win-back campaigns",
    "Presence detection",
    "Analytics and reporting"
  ],
  "url": "https://vivaspot.com",
  "provider": {
    "@type": "Organization",
    "name": "VivaSpot",
    "url": "https://vivaspot.com"
  }
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title} | VivaSpot</title>
    <meta name="title" content={`${title} | VivaSpot`} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="robots" content={noIndex ? 'noindex, nofollow' : 'index, follow'} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | VivaSpot`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:site_name" content="VivaSpot" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | VivaSpot`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageURL} />

    <!-- Article specific meta (for blog posts) -->
    {publishedDate && (
      <meta property="article:published_time" content={publishedDate.toISOString()} />
    )}
    {modifiedDate && (
      <meta property="article:modified_time" content={modifiedDate.toISOString()} />
    )}

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/images/wp-content/uploads/2023/09/vivaspot-logo-website-120x95-1.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700&family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,600;0,9..144,700;1,9..144,400&display=swap" rel="stylesheet">

    <!-- Google Analytics 4 -->
    <!-- TODO: Replace GA_MEASUREMENT_ID with your actual GA4 tracking ID (e.g., G-XXXXXXXXXX) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'GA_MEASUREMENT_ID');
    </script>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    {type !== 'article' && (
      <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
    )}
    {articleSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
    )}
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --orange-500: #e64a19;
    --orange-600: #d84315;
    --orange-700: #bf360c;
    --orange-100: #ffccbc;
    --cream: #FDF8F3;
    --cream-dark: #F5EDE4;
    --charcoal: #2c3e50;
    --charcoal-light: #546e7a;
    --font-display: 'Fraunces', Georgia, serif;
    --font-body: 'DM Sans', system-ui, sans-serif;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    background-color: var(--cream);
    color: var(--charcoal);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    font-weight: 600;
    color: var(--charcoal);
  }

  /* Prose styling for blog posts */
  .prose {
    color: var(--charcoal);
    line-height: 1.75;
  }

  .prose h1, .prose h2, .prose h3, .prose h4 {
    font-family: var(--font-display);
    color: var(--charcoal);
    margin-top: 2em;
    margin-bottom: 0.75em;
  }

  .prose h1 { font-size: 2.25rem; }
  .prose h2 { font-size: 1.75rem; }
  .prose h3 { font-size: 1.375rem; }

  .prose p {
    margin-bottom: 1.25em;
  }

  .prose a {
    color: var(--orange-500);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: var(--orange-700);
  }

  .prose strong {
    font-weight: 600;
  }

  .prose ul, .prose ol {
    margin: 1.25em 0;
    padding-left: 1.5em;
  }

  .prose li {
    margin-bottom: 0.5em;
  }

  .prose ul li {
    list-style-type: disc;
  }

  .prose ol li {
    list-style-type: decimal;
  }

  .prose blockquote {
    border-left: 4px solid var(--orange-500);
    padding-left: 1em;
    margin: 1.5em 0;
    font-style: italic;
    color: var(--charcoal-light);
  }

  .prose img {
    border-radius: 12px;
    margin: 2em 0;
  }

  .prose code {
    background: var(--cream-dark);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .prose pre {
    background: var(--charcoal);
    color: white;
    padding: 1em;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5em 0;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>
