---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import yaml from 'js-yaml';
import fs from 'node:fs';
import path from 'node:path';

// Load features page content from Keystatic
const contentPath = path.join(process.cwd(), 'src/content/features-page/index.yaml');
const fileContents = fs.readFileSync(contentPath, 'utf8');
const content = yaml.load(fileContents) as {
  hero: { headline: string; headlineAccent: string; subheadline: string };
  sections: Array<{
    id: string;
    number: string;
    navLabel: string;
    title: string;
    tagline: string;
    description: string;
    image: string;
    imageAlt: string;
    highlights: string[];
    statValue: string;
    statLabel: string;
  }>;
  integrationLogos: Array<{ src: string; name: string }>;
  socialProof: {
    headline: string;
    results: Array<{
      businessName: string;
      businessType: string;
      logo: string;
      quote: string;
      author: string;
      role: string;
      metrics: Array<{ label: string; before: string; after: string }>;
    }>;
  };
  cta: {
    headline: string;
    subheadline: string;
    primaryButtonText: string;
    primaryButtonLink: string;
    secondaryButtonText: string;
    secondaryButtonLink: string;
    trustSignals: string;
  };
};

const { hero, sections: featureSections, integrationLogos, socialProof, cta } = content;
---

<BaseLayout title="Features - Guest WiFi Marketing & Automation">
  <!-- Hero -->
  <section class="features-hero">
    <div class="hero-bg"></div>
    <div class="hero-container">
      <span class="hero-tag">Features</span>
      <h1 class="hero-title">{hero.headline} <span class="title-accent">{hero.headlineAccent}</span></h1>
      <p class="hero-subtitle">
        {hero.subheadline}
      </p>

      <!-- Quick nav pills -->
      <nav class="feature-nav">
        {featureSections.map((section) => (
          <a href={`#${section.id}`} class="nav-pill">
            <span class="nav-number">{section.number}</span>
            {section.navLabel}
          </a>
        ))}
      </nav>
    </div>
  </section>

  <!-- Feature Sections -->
  {featureSections.map((section, index) => (
    <section
      class={`feature-section ${index % 2 === 0 ? 'image-left' : 'image-right'}`}
      id={section.id}
    >
      <div class="section-container">
        <!-- Image Side -->
        <div class="feature-image-wrap">
          <div class="image-frame">
            <OptimizedImage
              src={section.image}
              alt={section.imageAlt}
              width={600}
              height={400}
              class="feature-image"
              priority={index === 0}
            />
          </div>
          <div class="stat-badge">
            <span class="stat-value">{section.statValue}</span>
            <span class="stat-label">{section.statLabel}</span>
          </div>
        </div>

        <!-- Content Side -->
        <div class="feature-content">
          <div class="section-number">{section.number}</div>
          <h2 class="section-title">{section.title}</h2>
          <p class="section-tagline">{section.tagline}</p>
          <p class="section-description">{section.description}</p>

          <!-- Feature Highlights -->
          <ul class="highlight-list">
            {section.highlights.map((highlight) => (
              <li class="highlight-item">
                <svg class="check-icon" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                </svg>
                {highlight}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>
  ))}

  <!-- Integration Partners Section -->
  <section class="partners-section">
    <div class="partners-container">
      <h2 class="partners-title">Integrated with Top Partners</h2>
      <p class="partners-subtitle">Seamless connections with the tools you already use</p>
      <div class="partners-grid">
        {integrationLogos.map((logo) => (
          <div class="partner-logo">
            <OptimizedImage src={logo.src} alt={logo.name} width={120} height={40} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="social-proof-section">
    <div class="social-proof-container">
      <h2 class="social-proof-title">{socialProof.headline}</h2>
      <p class="social-proof-subtitle">See what happens when you turn your WiFi into a marketing machine</p>

      <div class="results-grid">
        {socialProof.results.map((result) => (
          <div class="result-card">
            <div class="result-header">
              <OptimizedImage src={result.logo} alt={result.businessName} width={48} height={48} class="result-logo" />
              <div class="result-business">
                <span class="result-name">{result.businessName}</span>
                <span class="result-type">{result.businessType}</span>
              </div>
            </div>
            <div class="result-metrics">
              {result.metrics.map((metric) => (
                <div class="metric">
                  <span class="metric-before">{metric.before}</span>
                  <span class="metric-arrow">→</span>
                  <span class="metric-after">{metric.after}</span>
                  <span class="metric-label">{metric.label}</span>
                </div>
              ))}
            </div>
            <div class="result-footer">
              <p class="result-quote">"{result.quote}"</p>
              <cite class="result-author">— {result.author}, {result.role}</cite>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-container">
      <div class="cta-content">
        <h2 class="cta-title">{cta.headline}</h2>
        <p class="cta-text">
          {cta.subheadline}
        </p>
        <div class="cta-buttons">
          <a href={cta.primaryButtonLink} class="cta-btn-primary">{cta.primaryButtonText}</a>
          <a href={cta.secondaryButtonLink} class="cta-btn-secondary">{cta.secondaryButtonText}</a>
        </div>
        <p class="cta-trust">{cta.trustSignals}</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ===== Hero Section ===== */
  .features-hero {
    position: relative;
    background: linear-gradient(180deg, var(--cream) 0%, white 100%);
    padding: 3rem 1.5rem 2.5rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 60% at 50% 0%, rgba(230, 74, 25, 0.06) 0%, transparent 60%);
  }

  .hero-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-tag {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--orange-500);
    margin-bottom: 0.75rem;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.25rem);
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 1rem;
    line-height: 1.15;
  }

  .title-accent {
    color: var(--orange-500);
  }

  .hero-subtitle {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: var(--charcoal-light);
    line-height: 1.6;
    max-width: 650px;
    margin: 0 auto 2rem;
  }

  /* Feature Navigation Pills */
  .feature-nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .nav-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-body);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--charcoal);
    background: white;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    text-decoration: none;
    border: 1px solid rgba(0, 0, 0, 0.08);
    transition: all 0.25s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .nav-pill:hover {
    background: var(--orange-500);
    color: white;
    border-color: var(--orange-500);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(230, 74, 25, 0.25);
  }

  .nav-pill:hover .nav-number {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .nav-number {
    font-family: var(--font-display);
    font-size: 0.65rem;
    font-weight: 700;
    color: var(--orange-500);
    background: rgba(230, 74, 25, 0.1);
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    transition: all 0.25s ease;
  }

  /* ===== Feature Sections ===== */
  .feature-section {
    padding: 4rem 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .feature-section:nth-child(odd) {
    background: white;
  }

  .feature-section:nth-child(even) {
    background: var(--cream);
  }

  .section-container {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: center;
  }

  @media (min-width: 900px) {
    .section-container {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }

    .feature-section.image-right .section-container {
      direction: rtl;
    }

    .feature-section.image-right .section-container > * {
      direction: ltr;
    }
  }

  /* Image Side */
  .feature-image-wrap {
    position: relative;
  }

  .image-frame {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: white;
    box-shadow:
      0 4px 20px rgba(0, 0, 0, 0.08),
      0 8px 40px rgba(0, 0, 0, 0.04);
  }

  .feature-image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }

  .feature-image-wrap:hover .feature-image {
    transform: scale(1.02);
  }

  /* Stat Badge */
  .stat-badge {
    position: absolute;
    bottom: -12px;
    right: 20px;
    background: var(--charcoal);
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .feature-section.image-right .stat-badge {
    right: auto;
    left: 20px;
  }

  .stat-badge .stat-value {
    display: block;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--orange-500);
    line-height: 1;
  }

  .stat-badge .stat-label {
    display: block;
    font-family: var(--font-body);
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 0.2rem;
  }

  /* Content Side */
  .feature-content {
    position: relative;
  }

  .section-number {
    font-family: var(--font-display);
    font-size: 5rem;
    font-weight: 700;
    color: var(--orange-500);
    opacity: 0.08;
    line-height: 1;
    position: absolute;
    top: -2.5rem;
    left: -1.5rem;
    z-index: 0;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .section-tagline {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 500;
    color: var(--orange-500);
    margin-bottom: 1rem;
  }

  .section-description {
    font-family: var(--font-body);
    font-size: 0.95rem;
    line-height: 1.75;
    color: var(--charcoal-light);
    margin-bottom: 1.5rem;
  }

  /* Highlight List */
  .highlight-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.6rem;
  }

  .highlight-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--charcoal);
  }

  .check-icon {
    width: 16px;
    height: 16px;
    color: var(--orange-500);
    flex-shrink: 0;
  }

  /* ===== Partners Section ===== */
  .partners-section {
    background: var(--cream);
    padding: 4rem 1.5rem;
    text-align: center;
  }

  .partners-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .partners-title {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 0.5rem;
  }

  .partners-subtitle {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--charcoal-light);
    margin-bottom: 2rem;
  }

  .partners-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .partner-logo {
    background: white;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: all 0.3s ease;
  }

  .partner-logo:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
  }

  .partner-logo img {
    height: 40px;
    width: auto;
    max-width: 120px;
    object-fit: contain;
    filter: grayscale(30%);
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .partner-logo:hover img {
    filter: grayscale(0%);
    opacity: 1;
  }

  /* ===== CTA Section ===== */
  .cta-section {
    background: linear-gradient(135deg, var(--charcoal) 0%, #1a2634 100%);
    padding: 5rem 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(ellipse, rgba(230, 74, 25, 0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  .cta-container {
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
  }

  .cta-text {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.75);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cta-btn-primary {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    padding: 1rem 2rem;
    background: var(--orange-500);
    color: white;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(230, 74, 25, 0.4);
  }

  .cta-btn-primary:hover {
    background: var(--orange-600);
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(230, 74, 25, 0.5);
  }

  .cta-btn-secondary {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    padding: 1rem 2rem;
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-btn-secondary:hover {
    border-color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  .cta-trust {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 1.5rem;
    letter-spacing: 0.02em;
  }

  /* ===== Social Proof Section ===== */
  .social-proof-section {
    background: white;
    padding: 5rem 1.5rem;
  }

  .social-proof-container {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  .social-proof-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 0.5rem;
  }

  .social-proof-subtitle {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--charcoal-light);
    margin-bottom: 3rem;
  }

  .results-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .results-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .result-card {
    background: var(--cream);
    border-radius: 16px;
    padding: 2rem;
    text-align: left;
    display: flex;
    flex-direction: column;
  }

  .result-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .result-logo {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    object-fit: cover;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .result-business {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .result-name {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--charcoal);
  }

  .result-type {
    font-family: var(--font-body);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--charcoal-light);
  }

  .result-metrics {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .metric {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .metric-before {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--charcoal-light);
    text-decoration: line-through;
    opacity: 0.6;
  }

  .metric-arrow {
    font-size: 0.85rem;
    color: var(--charcoal-light);
  }

  .metric-after {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--orange-500);
  }

  .metric-label {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: var(--charcoal-light);
    margin-left: auto;
  }

  .result-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    padding-top: 1.25rem;
    margin-top: auto;
  }

  .result-quote {
    font-family: var(--font-body);
    font-size: 0.95rem;
    font-style: italic;
    color: var(--charcoal);
    line-height: 1.6;
    margin: 0 0 0.5rem 0;
  }

  .result-author {
    font-family: var(--font-body);
    font-size: 0.8rem;
    font-style: normal;
    color: var(--charcoal-light);
  }

  /* ===== Responsive ===== */
  @media (max-width: 899px) {
    .feature-section {
      padding: 3rem 1.5rem;
    }

    .section-number {
      font-size: 3rem;
      top: -1rem;
    }

    .highlight-list {
      grid-template-columns: 1fr;
    }

    .stat-badge {
      bottom: -8px;
      right: 12px;
      padding: 0.5rem 0.75rem;
    }

    .feature-section.image-right .stat-badge {
      left: 12px;
    }

    .stat-badge .stat-value {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .feature-nav {
      gap: 0.4rem;
    }

    .nav-pill {
      font-size: 0.75rem;
      padding: 0.4rem 0.75rem;
    }

    .nav-number {
      display: none;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .partners-grid {
      gap: 1rem;
    }

    .partner-logo {
      padding: 0.75rem 1rem;
    }

    .partner-logo img {
      height: 30px;
      max-width: 90px;
    }
  }

  /* Animations */
  @media (prefers-reduced-motion: no-preference) {
    .feature-image-wrap,
    .feature-content {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 0.5s ease forwards;
    }

    .feature-section:nth-child(1) .feature-image-wrap { animation-delay: 0.1s; }
    .feature-section:nth-child(1) .feature-content { animation-delay: 0.2s; }
    .feature-section:nth-child(2) .feature-image-wrap { animation-delay: 0.1s; }
    .feature-section:nth-child(2) .feature-content { animation-delay: 0.2s; }
    .feature-section:nth-child(3) .feature-image-wrap { animation-delay: 0.1s; }
    .feature-section:nth-child(3) .feature-content { animation-delay: 0.2s; }
    .feature-section:nth-child(4) .feature-image-wrap { animation-delay: 0.1s; }
    .feature-section:nth-child(4) .feature-content { animation-delay: 0.2s; }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
