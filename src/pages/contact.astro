---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us - Get in Touch">
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="hero-bg"></div>
    <div class="hero-container">
      <span class="hero-tag">Contact</span>
      <h1 class="hero-title">Let's start a conversation</h1>
      <p class="hero-subtitle">
        Ready to transform your guest WiFi into a marketing machine? We're here to help.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="contact-section">
    <div class="contact-container">
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-wrapper">
           <form class="contact-form">
            <div class="form-group">
              <label for="name" class="form-label">Your Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="form-input"
                placeholder="John Smith"
              />
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="form-input"
                placeholder="john@example.com"
              />
            </div>

            <div class="form-group">
              <label for="phone" class="form-label">Phone Number <span class="optional">(optional)</span></label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="form-input"
                placeholder="(555) 123-4567"
              />
            </div>

            <div class="form-group">
              <label for="company" class="form-label">Company Name <span class="optional">(optional)</span></label>
              <input
                type="text"
                id="company"
                name="company"
                class="form-input"
                placeholder="Your Business"
              />
            </div>

            <div class="form-group full-width">
              <label for="message" class="form-label">How can we help?</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="form-input form-textarea"
                placeholder="Tell us about your WiFi marketing goals..."
              ></textarea>
            </div>

            <button type="submit" class="form-submit">
              Send Message
              <svg viewBox="0 0 20 20" fill="currentColor" class="submit-icon">
                <path d="M3.105 2.289a.75.75 0 00-.826.95l1.414 4.925A1.5 1.5 0 005.135 9.25h6.115a.75.75 0 010 1.5H5.135a1.5 1.5 0 00-1.442 1.086l-1.414 4.926a.75.75 0 00.826.95 28.896 28.896 0 0015.293-7.154.75.75 0 000-1.115A28.897 28.897 0 003.105 2.289z" />
              </svg>
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="contact-info">
          <div class="info-card">
            <div class="info-icon email-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                <polyline points="22,6 12,13 2,6" />
              </svg>
            </div>
            <div class="info-content">
              <h3 class="info-title">Email Us</h3>
              <p class="info-text">Drop us a line anytime</p>
              <a href="mailto:sales@vivaspot.com" class="info-link">sales@vivaspot.com</a>
            </div>
          </div>

          <div class="info-card">
            <div class="info-icon phone-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
              </svg>
            </div>
            <div class="info-content">
              <h3 class="info-title">Call Us</h3>
              <p class="info-text">Mon-Fri 9am-5pm EST</p>
              <a href="tel:1-855-383-4662" class="info-link">1-855-383-4662</a>
            </div>
          </div>

          <div class="info-card demo-card">
            <div class="info-icon demo-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2" />
                <line x1="8" y1="21" x2="16" y2="21" />
                <line x1="12" y1="17" x2="12" y2="21" />
              </svg>
            </div>
            <div class="info-content">
              <h3 class="info-title">Book a Demo</h3>
              <p class="info-text">See VivaSpot in action with a personalized walkthrough</p>
              <a
                href="https://calendly.com/vivaspot"
                target="_blank"
                rel="noopener"
                class="demo-btn"
              >
                Schedule Demo
                <svg viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Social Links -->
          <div class="social-section">
            <p class="social-label">Follow us</p>
            <div class="social-links">
              <a href="https://facebook.com/vivaspot.wifi1" class="social-link" aria-label="Facebook" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3V2z" />
                </svg>
              </a>
              <a href="https://instagram.com/vivaspot" class="social-link" aria-label="Instagram" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
              <a href="https://linkedin.com/company/vivaspot" class="social-link" aria-label="LinkedIn" target="_blank" rel="noopener">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6zM2 9h4v12H2zM4 6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .contact-hero {
    position: relative;
    background: linear-gradient(135deg, #fff 0%, var(--cream) 100%);
    padding: 3rem 0 2rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 30% 20%, rgba(230, 74, 25, 0.06) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(230, 74, 25, 0.04) 0%, transparent 40%);
  }

  .hero-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-tag {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--orange-500);
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease forwards;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--charcoal);
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease 0.1s forwards;
    opacity: 0;
  }

  .hero-subtitle {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--charcoal-light);
    max-width: 500px;
    margin: 0 auto;
    animation: fadeInUp 0.6s ease 0.2s forwards;
    opacity: 0;
  }

  /* Contact Section */
  .contact-section {
    background: var(--cream);
    padding: 2rem 0 4rem;
  }

  .contact-container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 4rem;
    }
  }

  /* Contact Form */
  .contact-form-wrapper {
    background: white;
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
    animation: fadeInUp 0.6s ease 0.3s forwards;
    opacity: 0;
  }

  .contact-form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .contact-form {
      grid-template-columns: 1fr 1fr;
    }
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  .form-label {
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--charcoal);
  }

  .optional {
    font-weight: 400;
    color: var(--charcoal-light);
  }

  .form-input {
    font-family: var(--font-body);
    font-size: 0.95rem;
    padding: 0.875rem 1rem;
    background: var(--cream);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    color: var(--charcoal);
    outline: none;
    transition: all 0.3s ease;
  }

  .form-input::placeholder {
    color: var(--charcoal-light);
    opacity: 0.6;
  }

  .form-input:focus {
    border-color: var(--orange-500);
    box-shadow: 0 0 0 3px rgba(230, 74, 25, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-submit {
    grid-column: 1 / -1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    padding: 1rem 2rem;
    background: var(--orange-500);
    color: white;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 14px rgba(230, 74, 25, 0.3);
  }

  .form-submit:hover {
    background: var(--orange-600);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(230, 74, 25, 0.4);
  }

  .submit-icon {
    width: 18px;
    height: 18px;
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: white;
    border-radius: 16px;
    animation: fadeInUp 0.5s ease calc(0.4s + var(--i, 0) * 0.1s) forwards;
    opacity: 0;
  }

  .info-card:nth-child(1) { --i: 0; }
  .info-card:nth-child(2) { --i: 1; }
  .info-card:nth-child(3) { --i: 2; }

  .info-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    flex-shrink: 0;
  }

  .info-icon svg {
    width: 24px;
    height: 24px;
  }

  .email-icon {
    background: rgba(230, 74, 25, 0.1);
    color: var(--orange-500);
  }

  .phone-icon {
    background: rgba(44, 62, 80, 0.1);
    color: var(--charcoal);
  }

  .demo-icon {
    background: rgba(230, 74, 25, 0.1);
    color: var(--orange-500);
  }

  .info-content {
    flex: 1;
  }

  .info-title {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 0.25rem;
  }

  .info-text {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--charcoal-light);
    margin-bottom: 0.5rem;
  }

  .info-link {
    font-family: var(--font-body);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--orange-500);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .info-link:hover {
    color: var(--orange-700);
  }

  .demo-card {
    background: var(--charcoal);
  }

  .demo-card .info-icon {
    background: rgba(255, 255, 255, 0.1);
    color: var(--orange-500);
  }

  .demo-card .info-title {
    color: white;
  }

  .demo-card .info-text {
    color: rgba(255, 255, 255, 0.7);
  }

  .demo-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--orange-500);
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .demo-btn:hover {
    gap: 0.625rem;
  }

  .demo-btn svg {
    width: 16px;
    height: 16px;
  }

  /* Social Links */
  .social-section {
    padding: 1.5rem;
    background: white;
    border-radius: 16px;
    animation: fadeInUp 0.5s ease 0.7s forwards;
    opacity: 0;
  }

  .social-label {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--charcoal-light);
    margin-bottom: 1rem;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--cream);
    border-radius: 12px;
    color: var(--charcoal-light);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--orange-500);
    color: white;
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Demo banner */
  .demo-banner {
    background: linear-gradient(90deg, #22c55e 0%, #16a34a 100%);
    color: white;
    padding: 0.875rem 1.5rem;
    text-align: center;
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 500;
    animation: slideDown 0.4s ease;
  }

  .demo-banner strong {
    font-weight: 700;
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Highlight prefilled field */
  .form-input.prefilled {
    background: #f0fdf4;
    border-color: #22c55e;
  }

  .success-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 3rem 2rem;
  min-height: 300px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('.contact-form') as HTMLFormElement;
    
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const submitBtn = form.querySelector('.form-submit') as HTMLButtonElement;
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = 'Sending...';
        submitBtn.disabled = true;
        
        // Get form values
        const formData = new FormData(form);
        const name = formData.get('name') as string;
        const email = formData.get('email') as string;
        const phone = formData.get('phone') as string;
        const company = formData.get('company') as string;
        const message = formData.get('message') as string;
        
        // Split name into first and last
        const nameParts = name.trim().split(' ');
        const firstName = nameParts[0] || '';
        const lastName = nameParts.slice(1).join(' ') || '';
        
        // HubSpot submission
        const hubspotData = {
          fields: [
            { name: 'firstname', value: firstName },
            { name: 'lastname', value: lastName },
            { name: 'email', value: email },
            { name: 'phone', value: phone || '' },
            { name: 'company', value: company || '' },
            { name: 'message', value: message }
          ],
          context: {
            pageUri: window.location.href,
            pageName: document.title
          }
        };
        
        try {
          const response = await fetch(
            'https://api.hsforms.com/submissions/v3/integration/submit/241904624/21602f8f-89a7-4721-98fe-aa59be461e25',
            {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(hubspotData)
            }
          );
          
          if (response.ok) {
            // Success - show thank you message
            form.innerHTML = `
              <div class="success-message">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 48px; height: 48px; color: #22c55e; margin-bottom: 1rem;">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                  <polyline points="22 4 12 14.01 9 11.01" />
                </svg>
                <h3 style="font-family: var(--font-display); font-size: 1.5rem; color: var(--charcoal); margin-bottom: 0.5rem;">Message Sent!</h3>
                <p style="color: var(--charcoal-light);">Thanks for reaching out. We'll get back to you within 24 hours.</p>
              </div>
            `;
          } else {
            throw new Error('Submission failed');
          }
        } catch (error) {
          // Error handling
          submitBtn.innerHTML = originalText;
          submitBtn.disabled = false;
          alert('Sorry, there was an error sending your message. Please try again or email us directly at sales@vivaspot.com');
        }
      });
    }
    
    // Handle demo prefill (keep existing functionality)
    const urlParams = new URLSearchParams(window.location.search);
    const isDemo = urlParams.get('demo') === 'true';
    const storedEmail = localStorage.getItem('vivaspot_demo_email');

    if (isDemo && storedEmail) {
      const emailInput = document.getElementById('email') as HTMLInputElement;
      const nameInput = document.getElementById('name') as HTMLInputElement;

      if (emailInput) {
        emailInput.value = storedEmail;
        emailInput.classList.add('prefilled');
      }

      if (nameInput) {
        setTimeout(() => {
          nameInput.focus();
        }, 500);
      }

      localStorage.removeItem('vivaspot_demo_email');
    }
  });
</script>
