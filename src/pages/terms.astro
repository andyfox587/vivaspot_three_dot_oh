<style>
  /* Hero */
  .hero {
    position: relative;
    padding: 5rem 2rem 3rem;
    background: linear-gradient(135deg, var(--cream) 0%, #fff 50%, var(--cream-dark) 100%);
  }

  .hero-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-tag {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--orange-500);
    margin-bottom: 1rem;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 0.5rem;
    line-height: 1.15;
  }

  .hero-subtitle {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--charcoal-light);
  }

  /* Content Section */
  .content-section {
    background: white;
    padding: 3rem 2rem 5rem;
  }

  .content-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .legal-content {
    font-family: var(--font-body);
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--charcoal);
  }

  .legal-content .intro {
    font-size: 1.05rem;
    color: var(--charcoal-light);
    margin-bottom: 1.5rem;
  }

  .legal-content h2 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--cream-dark);
  }

  .legal-content h2:first-of-type {
    border-top: none;
    padding-top: 0;
  }

  .legal-content h3 {
    font-family: var(--font-display);
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .legal-content p {
    margin-bottom: 1rem;
  }

  .legal-content ul {
    margin: 1rem 0 1.5rem 1.5rem;
    padding: 0;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
  }

  .legal-content a {
    color: var(--orange-500);
    text-decoration: none;
  }

  .legal-content a:hover {
    text-decoration: underline;
  }

  .legal-caps {
    text-transform: uppercase;
    font-size: 0.85rem;
    background: var(--cream);
    padding: 1rem;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .highlight-box {
    background: #fff3e0;
    border-left: 4px solid var(--orange-500);
    padding: 1rem 1.25rem;
    margin: 1rem 0;
    border-radius: 0 8px 8px 0;
  }

  .address-block {
    background: var(--cream);
    padding: 1.25rem;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .address-block p {
    margin: 0;
  }

  .contact-info {
    background: var(--cream);
    padding: 1.5rem;
    border-radius: 12px;
    margin: 1.5rem 0;
  }

  .contact-info p {
    margin: 0 0 1rem 0;
  }

  .contact-info p:last-child {
    margin-bottom: 0;
  }

  hr {
    border: none;
    border-top: 2px solid var(--cream-dark);
    margin: 3rem 0 2rem;
  }

  .last-updated {
    text-align: center;
    color: var(--charcoal-light);
    margin-top: 2rem;
  }

  @media (max-width: 640px) {
    .hero {
      padding: 3rem 1.5rem 2rem;
    }

    .content-section {
      padding: 2rem 1.5rem 3rem;
    }

    .legal-content h2 {
      font-size: 1.25rem;
    }
  }
</style>
