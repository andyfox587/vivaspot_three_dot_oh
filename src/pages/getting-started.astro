---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';

const steps = [
  {
    number: '01',
    title: 'Sign Up & Register',
    description: 'Choose your pricing tier or start with our FREE plan. Registration takes just 2 minutes. No credit card required for free accounts.',
    icon: 'user-plus',
    highlight: 'FREE to start',
  },
  {
    number: '02',
    title: 'Connect Your WiFi',
    description: 'VivaSpot works with popular commercial WiFi systems including Cisco Meraki and Ubiquiti. We provide free hosting and licensing for supported devices.',
    icon: 'wifi',
    highlight: 'Works with existing hardware',
  },
  {
    number: '03',
    title: 'Design Your Splash Page',
    description: 'Create a branded WiFi login page that captures customer emails, phone numbers, and birthdays. Choose from templates or build your own.',
    icon: 'layout',
    highlight: '100+ templates',
  },
  {
    number: '04',
    title: 'Connect Your CRM',
    description: 'Automatically sync captured contacts to Mailchimp, HubSpot, Constant Contact, or 50+ other tools. Data is tagged by location for easy segmentation.',
    icon: 'link',
    highlight: '50+ integrations',
  },
  {
    number: '05',
    title: 'Launch Campaigns',
    description: 'Set up automated welcome emails, birthday campaigns, and SMS marketing. Watch your customer engagement grow on autopilot.',
    icon: 'rocket',
    highlight: 'Full automation',
  },
];

const faqs = [
  {
    question: 'What WiFi hardware do I need?',
    answer: 'VivaSpot works with Cisco Meraki, Ubiquiti UniFi, and most enterprise-grade WiFi systems. If you\'re on our paid plans, we can ship you a compatible access point at no extra cost.',
  },
  {
    question: 'How long does setup take?',
    answer: 'Most businesses are up and running within 15-30 minutes. Our setup wizard guides you through each step, and our support team is available to help.',
  },
  {
    question: 'Can I try before I commit?',
    answer: 'Absolutely! Start with our FREE tier to test the platform, or take advantage of our 30-day free trial on any paid plan.',
  },
  {
    question: 'Do I need technical expertise?',
    answer: 'Not at all. VivaSpot is designed for restaurant owners and marketers, not IT professionals. If you can use email, you can use VivaSpot.',
  },
];
---

<BaseLayout title="Getting Started - Setup Guide">
  <!-- Hero -->
  <section class="hero">
    <div class="hero-bg">
      <div class="hero-gradient"></div>
      <div class="hero-pattern"></div>
    </div>
    <div class="hero-container">
      <span class="hero-tag">Getting Started</span>
      <h1 class="hero-title">Up and running in minutes</h1>
      <p class="hero-subtitle">
        Transform your guest WiFi into a marketing powerhouse. Follow these simple steps to start capturing leads and driving repeat visits.
      </p>
      <div class="hero-cta">
        <a href="/pricing" class="btn-primary">View Pricing Plans</a>
        <a href="#steps" class="btn-secondary">See the Steps</a>
      </div>
    </div>
  </section>

  <!-- Steps -->
  <section class="steps-section" id="steps">
    <div class="steps-container">
      <div class="steps-header">
        <span class="section-tag">5 Simple Steps</span>
        <h2 class="section-title">From zero to WiFi marketing hero</h2>
      </div>

      <div class="steps-timeline">
        {steps.map((step, index) => (
          <div class="step-card" style={`--delay: ${index * 0.1}s`}>
            <div class="step-connector">
              <div class="step-line"></div>
              <div class="step-dot"></div>
            </div>
            <div class="step-content">
              <div class="step-number">{step.number}</div>
              <div class="step-icon" data-icon={step.icon}>
                {step.icon === 'user-plus' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="8.5" cy="7" r="4" />
                    <line x1="20" y1="8" x2="20" y2="14" />
                    <line x1="23" y1="11" x2="17" y2="11" />
                  </svg>
                )}
                {step.icon === 'wifi' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12.55a11 11 0 0 1 14.08 0" />
                    <path d="M1.42 9a16 16 0 0 1 21.16 0" />
                    <path d="M8.53 16.11a6 6 0 0 1 6.95 0" />
                    <circle cx="12" cy="20" r="1" fill="currentColor" />
                  </svg>
                )}
                {step.icon === 'layout' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" />
                    <line x1="3" y1="9" x2="21" y2="9" />
                    <line x1="9" y1="21" x2="9" y2="9" />
                  </svg>
                )}
                {step.icon === 'link' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                    <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
                  </svg>
                )}
                {step.icon === 'rocket' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z" />
                    <path d="M12 15l-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z" />
                    <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0" />
                    <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5" />
                  </svg>
                )}
              </div>
              <div class="step-text">
                <h3 class="step-title">{step.title}</h3>
                <p class="step-description">{step.description}</p>
                <span class="step-highlight">{step.highlight}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Video / Demo Section -->
  <section class="demo-section">
    <div class="demo-container">
      <div class="demo-content">
        <span class="section-tag">See It In Action</span>
        <h2 class="demo-title">Watch how easy it is</h2>
        <p class="demo-text">
          Still have questions? Book a personalized demo and our team will walk you through everything step by step.
        </p>
        <a href="https://calendly.com/vivaspot" target="_blank" rel="noopener" class="demo-btn">
          Book a Free Demo
          <svg viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
      <div class="demo-visual">
        <div class="demo-mockup">
          <div class="mockup-header">
            <span class="mockup-dot"></span>
            <span class="mockup-dot"></span>
            <span class="mockup-dot"></span>
          </div>
          <div class="mockup-screen">
            <div class="mockup-sidebar">
              <div class="mockup-nav-item active"></div>
              <div class="mockup-nav-item"></div>
              <div class="mockup-nav-item"></div>
              <div class="mockup-nav-item"></div>
            </div>
            <div class="mockup-content">
              <div class="mockup-chart">
                <div class="chart-bar" style="--height: 60%"></div>
                <div class="chart-bar" style="--height: 80%"></div>
                <div class="chart-bar" style="--height: 45%"></div>
                <div class="chart-bar" style="--height: 90%"></div>
                <div class="chart-bar" style="--height: 70%"></div>
              </div>
              <div class="mockup-stats">
                <div class="stat-box"></div>
                <div class="stat-box"></div>
                <div class="stat-box"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="faq-container">
      <div class="faq-header">
        <span class="section-tag">FAQ</span>
        <h2 class="section-title">Common questions</h2>
      </div>

      <div class="faq-grid">
        {faqs.map((faq, index) => (
          <div class="faq-card" style={`--delay: ${index * 0.1}s`}>
            <h3 class="faq-question">{faq.question}</h3>
            <p class="faq-answer">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to get started?</h2>
        <p class="cta-text">Join thousands of businesses already using VivaSpot to turn guest WiFi into revenue.</p>
        <div class="cta-buttons">
          <a href="/pricing" class="cta-btn-primary">Start Free Trial</a>
          <a href="/contact" class="cta-btn-secondary">Talk to Sales</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    position: relative;
    padding: 7rem 2rem 5rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(145deg, var(--cream) 0%, #fff 40%, var(--cream-dark) 100%);
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 30%, rgba(230, 74, 25, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(230, 74, 25, 0.05) 0%, transparent 35%);
  }

  .hero-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-tag {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--orange-500);
    margin-bottom: 1rem;
    animation: fadeIn 0.6s ease forwards;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 3.75rem);
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 1.25rem;
    line-height: 1.1;
    animation: fadeInUp 0.6s ease 0.1s forwards;
    opacity: 0;
  }

  .hero-subtitle {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--charcoal-light);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto 2rem;
    animation: fadeInUp 0.6s ease 0.2s forwards;
    opacity: 0;
  }

  .hero-cta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    animation: fadeInUp 0.6s ease 0.3s forwards;
    opacity: 0;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 2rem;
    background: var(--orange-500);
    color: white;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 14px rgba(230, 74, 25, 0.3);
  }

  .btn-primary:hover {
    background: var(--orange-600);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(230, 74, 25, 0.4);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 2rem;
    background: transparent;
    color: var(--charcoal);
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.95rem;
    border: 2px solid rgba(0, 0, 0, 0.15);
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    border-color: var(--charcoal);
    background: rgba(0, 0, 0, 0.03);
  }

  /* Section Tags & Titles */
  .section-tag {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--orange-500);
    margin-bottom: 0.75rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--charcoal);
    line-height: 1.2;
  }

  /* Steps Section */
  .steps-section {
    padding: 5rem 2rem;
    background: white;
  }

  .steps-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .steps-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .steps-timeline {
    position: relative;
  }

  .step-card {
    display: flex;
    gap: 2rem;
    margin-bottom: 2.5rem;
    animation: fadeInUp 0.5s ease calc(var(--delay) + 0.2s) forwards;
    opacity: 0;
  }

  .step-card:last-child {
    margin-bottom: 0;
  }

  .step-card:last-child .step-line {
    display: none;
  }

  .step-connector {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 24px;
    flex-shrink: 0;
  }

  .step-dot {
    width: 24px;
    height: 24px;
    background: var(--orange-500);
    border-radius: 50%;
    position: relative;
    z-index: 2;
    box-shadow: 0 0 0 6px rgba(230, 74, 25, 0.15);
  }

  .step-line {
    flex: 1;
    width: 2px;
    background: linear-gradient(to bottom, var(--orange-500) 0%, var(--orange-200) 100%);
    margin-top: 0.5rem;
  }

  .step-content {
    flex: 1;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.5rem;
    padding: 1.5rem;
    background: var(--cream);
    border-radius: 20px;
    position: relative;
    transition: all 0.3s ease;
  }

  .step-content:hover {
    background: #f8f4ef;
    transform: translateX(4px);
  }

  .step-number {
    position: absolute;
    top: -0.75rem;
    right: 1.5rem;
    font-family: var(--font-display);
    font-size: 4rem;
    font-weight: 700;
    color: var(--orange-500);
    opacity: 0.1;
    line-height: 1;
  }

  .step-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--charcoal);
    border-radius: 14px;
    color: var(--orange-500);
  }

  .step-icon svg {
    width: 28px;
    height: 28px;
  }

  .step-text {
    padding-top: 0.25rem;
  }

  .step-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 0.5rem;
  }

  .step-description {
    font-family: var(--font-body);
    font-size: 0.95rem;
    line-height: 1.65;
    color: var(--charcoal-light);
    margin-bottom: 0.75rem;
  }

  .step-highlight {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--orange-600);
    background: rgba(230, 74, 25, 0.1);
    padding: 0.375rem 0.75rem;
    border-radius: 50px;
  }

  /* Demo Section */
  .demo-section {
    padding: 5rem 2rem;
    background: var(--charcoal);
    overflow: hidden;
  }

  .demo-container {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .demo-container {
      grid-template-columns: 1fr 1.2fr;
    }
  }

  .demo-content .section-tag {
    color: var(--orange-400);
  }

  .demo-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
    line-height: 1.15;
  }

  .demo-text {
    font-family: var(--font-body);
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .demo-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: var(--orange-500);
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .demo-btn:hover {
    gap: 0.75rem;
  }

  .demo-btn svg {
    width: 18px;
    height: 18px;
  }

  /* Dashboard Mockup */
  .demo-visual {
    display: flex;
    justify-content: center;
  }

  .demo-mockup {
    width: 100%;
    max-width: 500px;
    background: #1e2a3a;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4);
    animation: float 6s ease-in-out infinite;
  }

  .mockup-header {
    display: flex;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    background: #16202c;
  }

  .mockup-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
  }

  .mockup-dot:first-child { background: #ff5f57; }
  .mockup-dot:nth-child(2) { background: #febc2e; }
  .mockup-dot:nth-child(3) { background: #28c840; }

  .mockup-screen {
    display: flex;
    padding: 1rem;
    gap: 1rem;
    min-height: 280px;
  }

  .mockup-sidebar {
    width: 50px;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .mockup-nav-item {
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  .mockup-nav-item.active {
    background: var(--orange-500);
  }

  .mockup-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mockup-chart {
    flex: 1;
    display: flex;
    align-items: flex-end;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
  }

  .chart-bar {
    flex: 1;
    height: var(--height);
    background: linear-gradient(to top, var(--orange-600), var(--orange-400));
    border-radius: 4px 4px 0 0;
    animation: growBar 1s ease 0.5s forwards;
    transform: scaleY(0);
    transform-origin: bottom;
  }

  .chart-bar:nth-child(1) { animation-delay: 0.6s; }
  .chart-bar:nth-child(2) { animation-delay: 0.7s; }
  .chart-bar:nth-child(3) { animation-delay: 0.8s; }
  .chart-bar:nth-child(4) { animation-delay: 0.9s; }
  .chart-bar:nth-child(5) { animation-delay: 1s; }

  .mockup-stats {
    display: flex;
    gap: 0.75rem;
  }

  .stat-box {
    flex: 1;
    height: 48px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
  }

  /* FAQ Section */
  .faq-section {
    padding: 5rem 2rem;
    background: var(--cream);
  }

  .faq-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .faq-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .faq-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .faq-card {
    padding: 1.75rem;
    background: white;
    border-radius: 16px;
    animation: fadeInUp 0.5s ease calc(var(--delay) + 0.2s) forwards;
    opacity: 0;
  }

  .faq-question {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 0.75rem;
  }

  .faq-answer {
    font-family: var(--font-body);
    font-size: 0.925rem;
    line-height: 1.65;
    color: var(--charcoal-light);
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, var(--orange-500) 0%, var(--orange-700) 100%);
  }

  .cta-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
  }

  .cta-text {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cta-btn-primary {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    background: white;
    color: var(--orange-600);
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1rem;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.15);
  }

  .cta-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  }

  .cta-btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    background: transparent;
    color: white;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1rem;
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-btn-secondary:hover {
    border-color: white;
    background: rgba(255, 255, 255, 0.1);
