---
import OptimizedImage from './OptimizedImage.astro';

interface Props {
  title: string;
  excerpt: string;
  slug: string;
  date: Date;
  featuredImage?: string;
  categories?: string[];
  readingTime?: string;
}

const { title, excerpt, slug, date, featuredImage, categories = [], readingTime } = Astro.props;

// Handle both old format (just-slug) and new format (folder/index.mdx, folder/index.mdoc, folder/index.md)
const cleanSlug = slug.replace(/\/index\.(mdx|mdoc|md)$/, '');

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="blog-card">
  {featuredImage && (
    <a href={`/blog/${cleanSlug}`} class="card-image-link">
      <div class="card-image-wrapper">
        <OptimizedImage
          src={featuredImage}
          alt={title}
          width={640}
          height={400}
          class="card-image"
        />
        <div class="card-image-overlay"></div>
      </div>
    </a>
  )}
  <div class="card-content">
    {categories.length > 0 && (
      <div class="card-categories">
        {categories.slice(0, 2).map((cat) => (
          <span class="category-tag">{cat}</span>
        ))}
      </div>
    )}
    <a href={`/blog/${cleanSlug}`} class="card-title-link">
      <h2 class="card-title">{title}</h2>
    </a>
    <p class="card-excerpt">{excerpt}</p>
    <div class="card-footer">
      <div class="card-meta">
        <time class="card-date" datetime={date.toISOString()}>
          {formattedDate}
        </time>
        {readingTime && (
          <span class="card-reading-time">{readingTime}</span>
        )}
      </div>
      <a href={`/blog/${cleanSlug}`} class="read-more">
        Read more <span class="arrow">&rarr;</span>
      </a>
    </div>
  </div>
</article>

<style>
  .blog-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.04);
  }

  .blog-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
  }

  .card-image-link {
    display: block;
    overflow: hidden;
  }

  .card-image-wrapper {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-card:hover .card-image {
    transform: scale(1.08);
  }

  .card-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 60%, rgba(0, 0, 0, 0.1) 100%);
    pointer-events: none;
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.875rem;
  }

  .category-tag {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--orange-500);
    background: rgba(230, 74, 25, 0.08);
    padding: 0.35rem 0.75rem;
    border-radius: 50px;
  }

  .card-title-link {
    text-decoration: none;
    display: block;
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--charcoal);
    margin-bottom: 0.75rem;
    transition: color 0.2s ease;
  }

  .card-title-link:hover .card-title {
    color: var(--orange-500);
  }

  .card-excerpt {
    font-family: var(--font-body);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--charcoal-light);
    margin-bottom: 1.25rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .card-date {
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: var(--charcoal-light);
  }

  .card-reading-time {
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: var(--charcoal-light);
  }

  .card-reading-time::before {
    content: 'Â·';
    margin-right: 0.75rem;
  }

  .read-more {
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--orange-500);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: gap 0.3s ease;
  }

  .read-more:hover {
    gap: 0.5rem;
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .read-more:hover .arrow {
    transform: translateX(2px);
  }
</style>
